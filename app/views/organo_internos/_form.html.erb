<%= simple_form_for(@organo_interno) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :nombre %>
    <%= f.input :funciones %>
    <%= f.fields_for :personas do |builder| %>
       <%= render 'persona_fields', :f => builder %>
    <% end %>
      <%= link_to_add_association 'add person', f, :personas %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
