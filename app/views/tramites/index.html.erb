<p id="notice"><%= notice %></p>

<h1>Listing Tramites</h1>

<table>
  <thead>
    <tr>
      <th>Nombre</th>
      <th>Descripcion</th>
      <th>Persona</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @tramites.each do |tramite| %>
      <tr>
        <td><%= tramite.nombre %></td>
        <td><%= tramite.descripcion %></td>
        <td><%= tramite.persona %></td>
        <td><%= link_to 'Show', tramite %></td>
        <td><%= link_to 'Edit', edit_tramite_path(tramite) %></td>
        <td><%= link_to 'Destroy', tramite, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

