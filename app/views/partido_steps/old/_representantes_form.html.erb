<%= simple_form_for @partido, url: wizard_path, method: :put do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs boxed_form">
    <div class="form-group">
      <%= f.fields_for :representantes do |builder| %>
       <%= render 'representante_fields', :f => builder %>
      <% end %>
      <%= link_to_add_association 'add representante', f, :representantes %>
    </div
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
