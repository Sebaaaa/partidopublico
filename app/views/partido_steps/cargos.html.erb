<div class="container" ng-controller="cargosController">
  <div class="row">
    <div class="col-md-2" id="row">
      <table>
        <tr>
          <td> Nuevo Cargo <i class="fa fa-plus-square-o" ng-click="getCargoModal(null)" title="Editar"></i> <td>
        </tr>
        <tr>
          <td> <input type="text" ng-model="filtro_cargos" placeholder="Filtrar"> <td>
        </tr>
      </table>
    </div>
    <div class="col-md-10">
      <table class="table">
        <thead>
          <tr>
            <th>Nombre</th>
            <th>Apellidos</th>
            <th>Cargo</th>
            <th>Lugar</th>
            <th>Desde</th>
            <th>Hasta</th>
            <th>Acciones</th>
          </tr>
        </thead>
        <tbody>
          <tr ng-repeat="cargo in cargos | filter: filtro_cargos">
            <td> {{cargo.persona.nombre}} </td>
            <td> {{cargo.persona.apellidos}} </td>
            <td> {{cargo.tipo_cargo.titulo}} </td>
            <td> {{cargo.lugar}} </td>
            <td> {{cargo.fecha_desde}} </td>
            <td> {{cargo.fecha_hasta}} </td>
            <td> <i class="fa fa-pencil-square-o" ng-click="getCargoModal(cargo.id)" title="Editar"></i> </td>
          </tr>
        </tbody>
      </table>
    </div>
  </div>
  <%= render 'cargos/cargo_modal' %>
</div>
